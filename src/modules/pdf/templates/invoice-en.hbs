<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Tax Invoice</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 0; padding: 20px; }
        .header { display: flex; justify-content: space-between; margin-bottom: 30px; }
        .company-info { flex: 1; }
        .logo { max-width: 150px; max-height: 80px; }
        .invoice-title { font-size: 24px; font-weight: bold; color: #333; }
        .invoice-details { margin: 20px 0; }
        .customer-info { margin: 20px 0; padding: 15px; background: #f9f9f9; }
        .items-table { width: 100%; border-collapse: collapse; margin: 20px 0; }
        .items-table th, .items-table td { border: 1px solid #ddd; padding: 8px; text-align: left; }
        .items-table th { background-color: #f2f2f2; }
        .totals { margin-top: 20px; text-align: right; }
        .total-row { margin: 5px 0; }
        .final-total { font-weight: bold; font-size: 18px; }
        .qr-code { margin-top: 20px; text-align: center; }
        .footer { margin-top: 30px; font-size: 12px; color: #666; }
    </style>
</head>
<body>
    <div class="header">
        <div class="company-info">
            {{#if company.logoUrl}}
            <img src="{{company.logoUrl}}" alt="Company Logo" class="logo">
            {{/if}}
            <h2>{{company.nameEn}}</h2>
            <p>{{company.addressEn}}</p>
            <p>{{company.cityEn}}, {{company.countryCode}}</p>
            <p>Email: {{company.email}}</p>
            <p>Phone: {{company.phone}}</p>
            {{#if company.trn}}
            <p><strong>TRN: {{company.trn}}</strong></p>
            {{/if}}
        </div>
        <div class="invoice-title">
            TAX INVOICE
        </div>
    </div>

    <div class="invoice-details">
        <p><strong>Invoice Number:</strong> {{invoice.invoiceNumber}}</p>
        <p><strong>Issue Date:</strong> {{invoice.issueDate}}</p>
        {{#if invoice.dueDate}}
        <p><strong>Due Date:</strong> {{invoice.dueDate}}</p>
        {{/if}}
        <p><strong>Currency:</strong> {{invoice.currencyCode}}</p>
    </div>

    <div class="customer-info">
        <h3>Bill To:</h3>
        <p><strong>{{customer.nameEn}}</strong></p>
        <p>{{customer.addressEn}}</p>
        <p>{{customer.cityEn}}, {{customer.countryCode}}</p>
        {{#if customer.email}}
        <p>Email: {{customer.email}}</p>
        {{/if}}
        {{#if customer.trn}}
        <p><strong>TRN: {{customer.trn}}</strong></p>
        {{/if}}
    </div>

    <table class="items-table">
        <thead>
            <tr>
                <th>Description</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>VAT Rate</th>
                <th>Line Total</th>
                <th>VAT Amount</th>
            </tr>
        </thead>
        <tbody>
            {{#each items}}
            <tr>
                <td>{{this.descriptionEn}}</td>
                <td>{{this.quantity}}</td>
                <td>{{this.unitPrice}} {{../invoice.currencyCode}}</td>
                <td>{{this.vatRate}}%</td>
                <td>{{this.lineTotal}} {{../invoice.currencyCode}}</td>
                <td>{{this.lineVatAmount}} {{../invoice.currencyCode}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <div class="totals">
        <div class="total-row">Subtotal: {{invoice.subtotal}} {{invoice.currencyCode}}</div>
        {{#if invoice.discountAmount}}
        <div class="total-row">Discount: -{{invoice.discountAmount}} {{invoice.currencyCode}}</div>
        {{/if}}
        <div class="total-row">VAT ({{invoice.vatRate}}%): {{invoice.vatAmount}} {{invoice.currencyCode}}</div>
        <div class="total-row final-total">Total: {{invoice.totalAmount}} {{invoice.currencyCode}}</div>
    </div>

    {{#if invoice.notesEn}}
    <div style="margin-top: 20px;">
        <strong>Notes:</strong>
        <p>{{invoice.notesEn}}</p>
    </div>
    {{/if}}

    {{#if qrCode}}
    <div class="qr-code">
        <img src="{{qrCode}}" alt="QR Code" style="width: 100px; height: 100px;">
        <p>Scan for verification</p>
    </div>
    {{/if}}

    <div class="footer">
        <p>This is a computer-generated invoice and does not require a signature.</p>
        <p>Generated on {{invoice.createdAt}}</p>
    </div>
</body>
</html>